{
  "name": "my-todolist-backend",
  "version": "1.0.0",
  "description": "PostgreSQL 기반 Todo 관리 RESTful API",
  "type": "module",
  "main": "build/index.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "build": "babel src -d build",
    "start": "node build/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testEnvironment=node",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testEnvironment=node --coverage"
  },
  "keywords": [
    "todo",
    "postgresql",
    "express",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 40,
        "lines": 70,
        "statements": 70
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ]
  }
}
